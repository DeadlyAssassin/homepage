<article>
  <h2><%= link_to post.title, post_path(post) %></h2>
  <div class="author"><span class="name"><%= post.user.name %></span> on <span class="date"> <%=l post.created_at %> </span></div>
  <p><%= raw post.content %></p>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(post), :class => 'btn btn-mini' if can? :update, post %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(post),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' if can? :delete, post %>
</article>
